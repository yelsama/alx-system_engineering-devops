#!/usr/bin env
# displays all active IPv4 IPs on the machine

ip_output=$(ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | awk '{print $2}' | grep -v '127.0.0.1')

# Check if any IP addresses were found
if [[ -z "$ip_output" ]]
then
	echo "No active IPv4 addresses found."
else
	echo "Active IPv4 addresses:"
	echo "$ip_output"
fi
